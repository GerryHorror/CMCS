@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <h2 class="login-title">Login to CMCS</h2>
    <form class="login-form" asp-action="Login" method="post">
        <div class="form-group">
            <label for="username" class="login-label">Username:</label>
            <input type="text" id="username" name="username" class="login-input" required>
        </div>
        <div class="form-group">
            <label for="password" class="login-label">Password:</label>
            <input type="password" id="password" name="password" class="login-input" required>
        </div>
        <div class="form-group">
            <label for="role" class="login-label">Role:</label>
            <select id="role" name="role" class="login-input">
                <option value="lecturer">Lecturer</option>
                <option value="coordinator">Programme Coordinator</option>
                <option value="manager">Academic Manager</option>
            </select>
        </div>
        <button type="submit" class="login-button">Login</button>
    </form>
</div>