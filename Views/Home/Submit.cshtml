@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="submit-container">
    <div class="submit-card">
        <h2 class="submit-title">Submit a New Claim</h2>
        <form class="submit-form" asp-action="Submit" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="claimDate" class="submit-label">Claim Date:</label>
                <input type="date" id="claimDate" name="ClaimDate" class="submit-input" required>
            </div>

            <div class="form-group">
                <label for="hoursWorked" class="submit-label">Hours Worked:</label>
                <input type="number" id="hoursWorked" name="HoursWorked" class="submit-input" step="0.5" min="0" required>
            </div>

            <div class="form-group">
                <label for="hourlyRate" class="submit-label">Hourly Rate:</label>
                <div class="input-group">
                    <span class="input-group-text">R</span>
                    <input type="number" id="hourlyRate" name="HourlyRate" class="submit-input" step="0.01" min="0" required>
                </div>
            </div>

            <div class="form-group">
                <label for="claimAmount" class="submit-label">Total Claim Amount:</label>
                <div class="input-group">
                    <span class="input-group-text">R</span>
                    <input type="number" id="claimAmount" name="ClaimAmount" class="submit-input" step="0.01" min="0" required readonly>
                </div>
            </div>

            <div class="form-group">
                <label for="claimDescription" class="submit-label">Description:</label>
                <textarea id="claimDescription" name="ClaimDescription" class="submit-textarea" rows="4" required></textarea>
            </div>

            <div class="form-group">
                <label for="supportingDocument" class="submit-label">Supporting Document:</label>
                <input type="file" id="supportingDocument" name="SupportingDocument" class="submit-file-input">
                <small class="form-text text-muted">Upload any relevant documents (PDF, JPG, PNG, max 5MB)</small>
            </div>

            <button type="submit" class="submit-button">Submit Claim</button>
        </form>
    </div>
</div>
