                <td>1001</td>
                <td>2024-03-15</td>
                <td>R2000.00</td>
                <td><span class="claim-status claim-status-pending">Pending</span></td>
                <td>
                    <button class="claim-details-button">Details</button>
                </td>
            </tr>
            <tr class="claim-row" data-status="Approved" data-user-id="2678" data-hours-worked="5" data-hourly-rate="200" data-claim-type="Invigilate" data-description="Systems Analysis and Design Exam" data-documents="attendance.pdf, timesheet.png">
                <td>1002</td>
                <td>2024-03-20</td>
                <td>R1000.00</td>
                <td><span class="claim-status claim-status-approved">Approved</span></td>
                <td>
                    <button class="claim-details-button">Details</button>
                </td>
            </tr>
            <tr class="claim-row" data-status="Rejected" data-user-id="1149" data-hours-worked="8" data-hourly-rate="400" data-claim-type="Lecture" data-description="Software Engineering Lecture" data-documents="attendance.pdf, timesheet.png">
                <td>1003</td>
                <td>2024-03-25</td>
                <td>R3200.00</td>
                <td><span class="claim-status claim-status-rejected">Rejected</span></td>
